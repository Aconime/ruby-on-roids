<tr>
  <th scope="row"><%= team.id %></th>
  <td><%= team.name %></td>
  <td><%= team.user_count %></td>
  <td><%= team.owner.name %></td>
  <td><%= team.created_at %></td>
  <td><%= team.updated_at %></td>
  <td>
    <%= link_to [:admin, team] do %>
      <i class="fa-solid fa-eye"></i>
    <% end %>
    
    <%= link_to edit_admin_team_path(team) do %>
      <i class="fas fa-edit"></i>
    <% end %>
    
    <%= link_to admin_team_path(team), method: :delete, data: { confirm: "Are you sure you want to delete this team?" } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>

  </td>
</tr>
