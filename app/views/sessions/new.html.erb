<div class='custom-container'>
  <h1> Login </h1>

  <%= form_with url: login_path do |form| %>
    <div class='mb-3'>
      <%= form.label :email %>
      <%= form.text_field :email, class: 'form-control', placeholder: 'john.smith@mail.com' %>
    </div>
    <div class='mb-3'>
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control', placeholder: 'password' %>
    </div>
    <br>
    <div class='mb-3'>
      <%= form.submit 'Login', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>