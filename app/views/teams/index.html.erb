<p style="color: green"><%= notice %></p>

<h1>Teams</h1>

<div id="teams">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Team Name</th>
        <th scope="col">Team Members</th>
        <th scope="col">Created At</th>
        <th scope="col">Hacks Completed</th>
        <th scope="col">Total Points</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <%= render partial: 'row', locals: { team: team } %>
      <% end %>
    </tbody>
  </table>
</div>

<% unless Current.user && Current.user.team %>
  <%= link_to "New team", new_team_path %>
<% end %>