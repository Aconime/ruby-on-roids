<div class="form">
  <h1>Login</h1>
  <%= support_ticket.title %>
  <%= form_with url: support_ticket_reply_path(support_ticket), html: { class: 'login-form' } do |form| %>
    <%= form.text_field :email, placeholder: 'email' %>
    <%= form.password_field :password, placeholder: 'password' %>
    <%= form.submit 'Login', class: 'button' %>
    <p class="message">Not registered? <%= link_to 'Create an account', register_path %></p>
  <% end %>
</div>
