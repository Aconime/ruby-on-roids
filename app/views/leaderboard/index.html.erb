<div class='custom-container'>
  <h1>Leaderboard</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Team Name</th>
        <th scope="col">Members</th>
        <th scope="col">First Joined</th>
        <th scope="col">Hacks Completed</th>
        <th scope="col">Total Points</th>
      </tr>
    </thead>
    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <th scope="row"><%= @teams.pluck(:id).index(team.id) + 1 %></th>
          <td><%= team.name %></td>
          <td><%= team.users.count %></td>
          <td><%= team.created_at %></td>
          <td><%= rand(1..10) %></td>
          <td><%= team.points %></td>
        </tr>
      <% end %>
  </table>
  <br>
  <%== pagy_nav(@pagy) %>
</div>
<br>
